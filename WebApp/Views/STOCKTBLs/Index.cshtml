@model IEnumerable<WebApp.Models.STOCKTBL>

@{
    ViewBag.Title = "Index";
    string id = "商品ID";
    string name = "商品名";
    string price = "単価";
    string stock = "在庫数";
    string tprice = "小計";
    string date = "更新日時";
}

<style>
    body{
        background-color:azure
    }
</style>

<h2>在庫管理</h2>

<table class="table" style="color:darkblue; outline-style:double">
    <tr>
        <th>
            @Html.DisplayName(id)
        </th>
        <th>
            @Html.DisplayName(name)
        </th>
        <th>
            @Html.DisplayName(price)
        </th>
        <th>
            @Html.DisplayName(stock)
        </th>
        <th>
            @Html.DisplayName(tprice)
        </th>
        <th>
            @Html.DisplayName(date)
        </th>
        <th></th>
    </tr>
 
@foreach (var item in Model) {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GOODSID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GOODSNM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRICE)
            <text>
                円
            </text>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STOCK)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TPRICE)
            <text>
                円
            </text>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LASTUDT)
        </td>
        <td>
            @Html.ActionLink("編集", "Edit", new { id=item.DEALID.Trim() }) 
        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("商品管理画面へ", "index", new {id = UrlParameter.Optional, controller = "GOODSTBLs" })
</p>
