@model IEnumerable<WebApp.Models.GOODSTBL>

@{
    ViewBag.Title = "Index";
}

<h2>商品一覧</h2>

<p>
    @Html.ActionLink("新規商品追加", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GOODSID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GOODSNM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRICE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GOODSID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GOODSNM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRICE)
        </td>
        <td>
